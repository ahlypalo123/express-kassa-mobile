<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyActionBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/layout_drop_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_dashed_lines"
        android:gravity="top"
        android:minHeight="256dp"
        android:padding="8dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_settings_variable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_settings_variable"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/shape_blue_border"
        android:text="Text or\nVariable"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/btn_add_line"
        app:icon="@drawable/ic_db_plus"
        app:iconGravity="top"
        app:iconSize="32dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_line"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_blue_border"
        android:text="Line"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_marginHorizontal="8dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_lines_plus"
        app:iconGravity="top"
        app:layout_constraintEnd_toStartOf="@id/btn_add_image"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_settings_variable" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_blue_border"
        android:text="Image"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:iconPadding="-2dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:layout_marginHorizontal="8dp"
        app:icon="@drawable/ic_img_plus"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_line" />
</androidx.constraintlayout.widget.ConstraintLayout>