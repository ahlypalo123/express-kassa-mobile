<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyActionBar"
        app:titleTextColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_drop_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/shape_dashed_lines"
        android:gravity="top"
        android:minHeight="128dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_done_24"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@null" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:fadeScrollbars="false"
        android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarThumbHorizontal="@color/gray_alto"
        android:scrollbarFadeDuration="50000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_text"
                android:layout_width="139dp"
                android:layout_height="95dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/shape_blue_border_radius_32"
                android:layout_marginVertical="16dp"
                android:text="Текст или\nпеременная"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_db_plus"
                app:iconGravity="top"
                app:iconSize="32dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_add_line"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_line"
                android:layout_width="139dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/shape_blue_border_radius_32"
                android:layout_marginVertical="16dp"
                android:text="Линия"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_lines_plus"
                app:iconGravity="top"
                app:iconSize="40dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_add_variable"
                app:layout_constraintStart_toEndOf="@+id/btn_add_text"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_variable"
                android:layout_width="139dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/shape_blue_border_radius_32"
                android:layout_marginVertical="16dp"
                android:text="Переменная"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_db_plus"
                app:iconGravity="top"
                app:iconSize="32dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_add_image"
                app:layout_constraintStart_toEndOf="@+id/btn_add_line"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_image"
                android:layout_width="139dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/shape_blue_border_radius_32"
                android:text="Изображение"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_img_plus"
                app:iconGravity="top"
                app:iconPadding="-2dp"
                app:iconSize="50dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_list"
                app:layout_constraintStart_toEndOf="@+id/btn_add_variable"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_list"
                android:layout_width="139dp"
                android:layout_height="95dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/shape_blue_border_radius_32"
                android:text="Список"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_lines_plus"
                app:iconGravity="top"
                app:iconPadding="-2dp"
                app:iconSize="40dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_group"
                app:layout_constraintStart_toEndOf="@+id/btn_add_image"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_group"
                android:layout_width="139dp"
                android:layout_height="95dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/shape_blue_border_radius_32"
                android:text="Группа"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_lines_plus"
                app:iconGravity="top"
                app:iconPadding="-2dp"
                app:iconSize="40dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_add_list"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>